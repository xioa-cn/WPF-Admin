<Page
    x:Class="Xioa.Admin.Core.Views.ShapeBorder.ShapeBorderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:com="clr-namespace:Xioa.Admin.Core.Views.ShapeBorder.Component.ShapeBorder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Xioa.Admin.Core.Views.ShapeBorder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShapeBorderPage"
    mc:Ignorable="d">

    <Grid Width="200" Height="140">
        <!--  主体部分  -->
        <Border
            Height="120"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="#317ef3"
            BorderThickness="1"
            CornerRadius="3" />

        <!--  底部三角形  -->
        <Border
            Width="14"
            Height="14"
            Margin="43,100,0,0"
            HorizontalAlignment="Left"
            Background="White"
            BorderBrush="#317ef3"
            BorderThickness="0,0,1,1"
            RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <RotateTransform Angle="45" />
            </Border.RenderTransform>
        </Border>
    </Grid>
</Page>
