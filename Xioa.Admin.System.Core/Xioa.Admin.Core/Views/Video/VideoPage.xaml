<Page
    x:Class="Xioa.Admin.Core.Views.Video.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Xioa.Admin.Core.Views.Video"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="VideoPage"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  视频播放区域  -->
        <Grid Grid.Row="0">
            <MediaElement
                x:Name="mediaPlayer"
                BufferingEnded="MediaPlayer_BufferingEnded"
                BufferingStarted="MediaPlayer_BufferingStarted"
                LoadedBehavior="Manual"
                MediaEnded="MediaPlayer_MediaEnded"
                MediaFailed="MediaPlayer_MediaFailed"
                MediaOpened="MediaPlayer_MediaOpened"
                MouseLeftButtonDown="MediaPlayer_MouseLeftButtonDown"
                UnloadedBehavior="Stop" />

            <!--  Loading 遮罩层  -->
            <Grid
                x:Name="loadingPanel"
                Background="#80000000"
                Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar
                        Width="100"
                        Height="2"
                        Margin="0,0,0,10"
                        IsIndeterminate="True" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Text="正在缓冲..." />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  控制面板  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  进度条  -->
            <Slider
                x:Name="timelineSlider"
                Grid.Row="0"
                Margin="5"
                ValueChanged="TimelineSlider_ValueChanged" />

            <!--  控制按钮  -->
            <StackPanel
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="openButton"
                    Width="80"
                    Margin="5"
                    Click="OpenButton_Click"
                    Content="打开文件" />

                <!--  后退5秒按钮  -->
                <Button
                    x:Name="rewindButton"
                    Width="60"
                    Margin="5"
                    Click="RewindButton_Click"
                    Content="-5s" />

                <Button
                    x:Name="playButton"
                    Width="80"
                    Margin="5"
                    Click="PlayButton_Click"
                    Content="播放" />

                <Button
                    x:Name="pauseButton"
                    Width="80"
                    Margin="5"
                    Click="PauseButton_Click"
                    Content="暂停" />

                <Button
                    x:Name="stopButton"
                    Width="80"
                    Margin="5"
                    Click="StopButton_Click"
                    Content="停止" />

                <!--  快进5秒按钮  -->
                <Button
                    x:Name="forwardButton"
                    Width="60"
                    Margin="5"
                    Click="ForwardButton_Click"
                    Content="+5s" />

                <!--  音量控制  -->
                <StackPanel
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="音量:" />
                    <Slider
                        x:Name="volumeSlider"
                        Width="100"
                        Maximum="1"
                        Minimum="0"
                        ValueChanged="VolumeSlider_ValueChanged"
                        Value="0.5" />
                </StackPanel>

                <!--  播放时间显示  -->
                <TextBlock
                    x:Name="timeDisplay"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Text="00:00:00 / 00:00:00" />
                <!--  在控制栏中添加循环播放按钮  -->
                <Button
                    x:Name="loopButton"
                    Width="60"
                    Margin="5"
                    Click="LoopButton_Click"
                    Content="🔁"
                    ToolTip="循环播放" />
                <!--  全屏按钮  -->
                <Button
                    x:Name="fullscreenButton"
                    Width="60"
                    Margin="5"
                    Click="FullscreenButton_Click"
                    Content="⛶" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
